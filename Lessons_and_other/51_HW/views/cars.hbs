<h1>{{title}}</h1>
<a class="btn btn-primary" href="/">To
  <span class="text-danger">Main</span>
  page</a>
<br /><br />
<a class="btn btn-danger" href="/cars/add">Add new car</a>
<br /><br />

{{#if data1}}

<table class="table">
  <thead>
    <tr>
      <th scope="col">Mark</th>
      <th scope="col">Color</th>
      <th scope="col">Type</th>
      <th scope="col">Key</th>
    </tr>
  </thead>
  <tbody>
    {{#each data1}}
      <tr class="table-primary">
        <th scope="row">{{mark}}</th>
        <td>{{color}}</td>
        <td>{{type}}</td>
        <td>{{key}}</td>
        <td>
          <a class="btn btn-secondary" href="/cars/carDel/{{_id}}">Delete</a>
          <a class="btn btn-secondary" href="/cars/carEdit/{{_id}}">Edit</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

{{else}}
<h2>You dont have cars</h2>

{{/if}}
